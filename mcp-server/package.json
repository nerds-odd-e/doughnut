{
  "name": "doughnut-mcp-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for doughnut",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10.14.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "syncpack fix-mismatches",
    "bundle": "pnpm exec esbuild src/index.ts --bundle --platform=node --outfile=./dist/mcp-server.bundle.mjs --format=esm",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "format": "biome check --write src/"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@types/node": "^22.15.30",
    "esbuild": "^0.25.9",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "zod": "^4.1.5"
  }
}
