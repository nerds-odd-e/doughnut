{
  "name": "doughnut-mcp-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for doughnut",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24",
    "pnpm": ">=10.25.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "syncpack fix-mismatches",
    "bundle": "pnpm exec esbuild src/index.ts --bundle --platform=node --outfile=./dist/mcp-server.bundle.mjs --format=esm --packages=external --external:@modelcontextprotocol/sdk --external:express --external:express-rate-limit",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "format": "biome check --write src/"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@types/node": "^24.10.2",
    "esbuild": "0.27.1",
    "typescript": "5.9.3",
    "vitest": "4.0.15",
    "zod": "^4.1.13"
  }
}
